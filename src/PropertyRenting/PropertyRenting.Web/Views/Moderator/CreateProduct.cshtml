@using PropertyRenting.Web.Models.Moderator
@model CreateProductModel

@{
    ViewData["Title"] = "Add New Product";
}

<section class="row">
    <div class="col-md-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical needs-validation" novalidate enctype="multipart/form-data" method="post" asp-area="Panel"
                            asp-controller="Moderator" asp-action="CreateProduct" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">Product Name</label>
                                        <div class="invalid-feedback">Please provide a Name.</div>
                                        <div class="position-relative">
                                            <input asp-for="ProductName" type="text" class="form-control"
                                                    placeholder="Company Name"
                                                    id="first-name-icon" required />
                                            <div class="form-control-icon">
                                                <i class="bi bi-building"></i>
                                            </div>
                                            <div class="invalid-tooltip">
                                                Please provide a product name.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="email-id-icon">Price</label>
                                        <div class="position-relative">
                                            <input type="number" class="form-control" asp-for="Price"
                                                    placeholder="name@email.com" id="email-id-icon" required />
                                            <div class="form-control-icon">
                                                <i class="bi bi-envelope" aria-hidden="true"></i>
                                            </div>
                                            <div class="invalid-tooltip">
                                                Please provide a valid e-mail address.
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="address-id-icon">Photo</label>
                                        <div class="position-relative">
                                            <input type="file" class="form-control" aria-label="file example" name="FormFile"
                                                    id="FormFile" asp-for="FormFile" required />
                                            <div class="invalid-feedback">
                                                Please choose a photo..
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <span class="text-danger" asp-validation-for="FormFile"></span>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="address-id-icon">Description</label>
                                        <div class="position-relative">
                                            <textarea class="form-control" asp-for="Description" id="exampleFormControlTextarea1" rows="3" required placeholder="Write here.."></textarea>
                                            <div class="invalid-feedback">
                                                Please choose a photo..
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Submit
                                    </button>
                                    <button type="reset"
                                            class="btn btn-light-secondary me-1 mb-1">
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
}